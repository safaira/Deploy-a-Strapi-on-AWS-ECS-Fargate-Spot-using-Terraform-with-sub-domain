#configure nginx 


# Use the official Nginx image from the Docker Hub
FROM nginx:latest

# Copy Nginx configuration file
COPY /etc/nginx/nginx.conf /etc/nginx/nginx.conf

# Copy SSL certificates
COPY /etc/letsencrypt/live/saniya.contentecho.in/fullchain.pem /etc/letsencrypt/live/saniya.contentecho.in/fullchain.pem
COPY /etc/letsencrypt/live/saniya.contentecho.in/privkey.pem /etc/letsencrypt/live/saniya.contentecho.in/privkey.pem

# Expose ports 80 and 443
EXPOSE 80
EXPOSE 443